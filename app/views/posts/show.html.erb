<h2><%= @post.title %></h2>
  <% if @post.picture.attached? %>
    <p><%= image_tag @post.picture, style: "width: 200px; display: block" %></p>
  <% end %>
  <p><%= @post.date %></p>
  <p><%= @post.contents %></p>

<% if current_user.id == @post.user_id %>

  <p><%= button_to("Edit", edit_post_path(@post), method: :get) %></p>
  <p><%= link_to "Destroy", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <p><%= link_to("Back", posts_path) %></p>

<% end %>
